primaryColor = #f68428
secondary-color = #e7e7e8

@font-face 
	font-family 'icomoon'
	font-weight normal
	font-style normal
	src url('../fonts/icomoon.eot?t0royq')
	src url('../fonts/icomoon.eot?t0royq#iefix') format('embedded-opentype'),
		url('../fonts/icomoon.ttf?t0royq') format('truetype'),
		url('../fonts/icomoon.woff?t0royq') format('woff'),
		url('../fonts/icomoon.svg?t0royq#icomoon') format('svg')
[class^="icon-"], [class*=" icon-"] 
	/* use !important to prevent issues with browser extensions that change fonts */
	font-family 'icomoon' !important
	speak none
	font-style normal
	font-weight normal
	font-variant normal
	text-transform none
	line-height 1
	display inline-block

	-webkit-font-smoothing antialiased
	-moz-osx-font-smoothing grayscale
    
.icon-file-text2:before 
	content "\e900"

.icon-copy:before 
	content "\e901"

.icon-clipboard:before 
	content "\e902"

.icon-checkmark:before 
	content "\e903"
html 
	margin 0
	padding 0
	background #cdcfd1
body 
	 	/* Permalink - use to edit and share this gradient: http://colorzilla.com/gradient-editor/#ffffff+0,cdcfd1+100 */
	background: #ffffff; /* Old browsers */
	background: -moz-linear-gradient(top,  #ffffff 0%, #cdcfd1 100%); /* FF3.6-15 */
	background: -webkit-linear-gradient(top,  #ffffff 0%,#cdcfd1 100%); /* Chrome10-25,Safari5.1-6 */
	background: linear-gradient(to bottom,  #ffffff 0%,#cdcfd1 100%); /* W3C, IE10+, FF16+, Chrome26+, Opera12+, Safari7+ */

	font-family arial
	margin 0
	padding 0
	color #818285
h1 
	font-weight normal
	margin 0
	padding 0
input 
	&.error 
		border 1px solid #f68428
label
	&.error
		color #f68428
		font-size 16px
		position relative
		top 5px
.pull-right
	float right
.pull-left
	float left
.margin-bottom
	&-20
		margin-bottom 20px
.margin-top
	&-20
		margin-top 20px
	
.panel
	border 2px solid #5f6062
	left 0 
	margin auto
	position absolute
	right 0
	top 0
	bottom 0
	&__login
		width 580px
	&--body 
		background-color secondary-color
		display block
		padding 40px 44px
		&__consulta
			padding 7px
.btn
	border 0px
	pointer cursor
	display inline-block
	font-size 14px
	font-weight normal
	&--orange
		background-color primaryColor
		padding 6px 10px
		color white
	
.subtitle
	display block
	text-align center
	font-size 24px
	padding 28px 0px
.title__gestor
	font-size 30px
	text-align center
	color primaryColor
	padding 20px 0px
.mensaje
	display block
	text-align center
	&--confirmacion
		width 350px
		margin auto
.header
	background-color white
	.logo__login
		height 148px
		padding 26px 46px
		width 468px
	.logo--horizontal
		height 102px
		padding 20px
		width 422px
		display inline-block
	&--control
		width 725px
		display block
		padding 0px 20px
		clear both
		&> div
			display inline-block
			margin-top 15px
		&__gestor
			width 100%
			
	&__usuario
		color #818285
		&__gestor
			padding-left 20px
	&--icon
		display inline-block
		font-size 68px
		vertical-align top
		padding 10px 0px 0px 20px
	&--info
		display inline-block
		width 1210px
		padding-left 20px

.title
	color primaryColor
	&--orange
		background-color primaryColor
		color white !important
	
	&__login
		padding 10px 20px
		text-align center
	&--horizontal
		display inline-block
		vertical-align top
		width 100%
		text-align center
		padding 10px 0px
